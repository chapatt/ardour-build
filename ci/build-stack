		&& (set -e && cd $MOD_libsndfile_unpacked  && basic_buildonly sndfile ) || die "sndfile build failed"

    tar xf $MOD_libsamplerate_local_tarball \
    && sed -i.bak 's/ examples tests//' $MOD_libsamplerate_unpacked/Makefile.in \

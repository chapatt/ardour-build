        mv $PREFIX/bin/xsltproc $PREFIX/bin/xsltproc.bin
        cat <<EOF >$PREFIX/bin/xsltproc
#!/bin/sh
exec xsltproc.bin --nonet "\$@"
EOF
        chmod a+x $PREFIX/bin/xsltproc
fi
fi
